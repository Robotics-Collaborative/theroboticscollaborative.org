<!doctype html>
<html lang="en" class="h-full antialiased">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>
      <%= "#{site.data.personal_info.name} #{resource&.data&.title || site.metadata.title}" %>
    </title>
    <meta name="description" content="<%= resource.data.description || site.metadata.description %>" />

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="<%= asset_path :css %>" />
    <script src="<%= asset_path :js %>" defer></script>
    <%= live_reload_dev_js %>

    <!-- Stripe Buy Button Script -->
    <script async src="https://js.stripe.com/v3/buy-button.js"></script>

    <!-- Favicon -->
    <link rel="apple-touch-icon" sizes="180x180" href="<%= relative_url '/images/apple-touch-icon.png' %>">
    <link rel="icon" type="image/png" sizes="32x32" href="<%= relative_url '/images/favicon-32x32.png' %>">
    <link rel="icon" type="image/png" sizes="16x16" href="<%= relative_url '/images/favicon-16x16.png' %>">
    <link rel="manifest" href="<%= relative_url '/images/site.webmanifest' %>">
    <link rel="mask-icon" href="<%= relative_url '/images/safari-pinned-tab.svg' %>" color="#0d9488">
    <meta name="msapplication-TileColor" content="#0d9488">
    <meta name="theme-color" content="#ffffff">

    <!-- Open Graph -->
    <meta property="og:title" content="<%=
      if resource.data.title&.include?("site.data.personal_info.name")
        site.data.personal_info.name || "Rose City Robotics"
      else
        resource.data.title || site.metadata.title
      end
    %>" />
    <meta property="og:description" content="<%= resource.data.description || site.metadata.description %>" />
    <meta property="og:type" content="<%= resource.data.social&.dig('og_type') || 'website' %>" />
    <meta property="og:url" content="<%= absolute_url resource.relative_url %>" />
    <meta property="og:site_name" content="Rose City Robotics Collaborative" />
    <meta property="og:locale" content="<%= resource.data.social&.dig('og_locale') || 'en_US' %>" />
    
    <% featured_image = resource.data.image || '/images/square_500.jpg' %>
    <meta property="og:image" content="<%= absolute_url featured_image %>" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:alt" content="<%= resource.data.title || site.metadata.title %>" />
    
    <!-- Twitter Card -->
    <meta name="twitter:card" content="<%= resource.data.social&.dig('twitter_card') || 'summary_large_image' %>" />
    <meta name="twitter:title" content="<%=
      if resource.data.title&.include?("site.data.personal_info.name")
        site.data.personal_info.name || "Rose City Robotics"
      else
        resource.data.title || site.metadata.title
      end
    %>" />
    <meta name="twitter:description" content="<%= resource.data.description || site.metadata.description %>" />
    <meta name="twitter:image" content="<%= absolute_url featured_image %>" />
    
    <!-- Additional SEO -->
    <% if resource.data.keywords %>
      <meta name="keywords" content="<%= resource.data.keywords %>" />
    <% end %>
    <% if resource.data.author %>
      <meta name="author" content="<%= resource.data.author %>" />
    <% end %>
    <% if resource.data.canonical_url %>
      <link rel="canonical" href="<%= absolute_url resource.data.canonical_url %>" />
    <% end %>
    <%= seo %>
  </head>
  <body class="flex h-full bg-zinc-50 dark:bg-black">
    <div class="flex w-full">
      <div class="fixed inset-0 flex justify-center sm:px-8">
        <div class="flex w-full max-w-7xl lg:px-8">
          <div class="w-full bg-white ring-1 ring-zinc-100 dark:bg-zinc-900 dark:ring-zinc-300/20"></div>
        </div>
      </div>
      <div class="relative flex w-full flex-col">
        <%= render Header.new(is_home: resource.relative_url == "/") %>
        <main class="flex-auto">
          <%= yield %>
        </main>
        <%= render Footer.new %>
      </div>
    </div>
  </body>
</html>
